@require '../_variables.styl';

.list 
	padding 0
	margin 0
	list-style none
	-webkit-overflow-scrolling touch

	li
		height (list-simple-item-height - 1px) 
		line-height list-simple-item-height

		position relative
		display block
		border-bottom 1px solid #eee

		overflow hidden
		white-space nowrap
		
		a
			width 100%
			height 100%
			display block
			color #000
			transition background-color 250ms ease-in-out
			
			&:active
				background-color #eee

		.pull-left, .pull-right
			width list-simple-item-height
			height list-simple-item-height
			line-height list-simple-item-height
			vertical-align middle
			text-align center
			z-index 1
		
		.item-content
			display inline-block
			padding list-cell-content-padding 15px
			line-height  list-expanded-item-height
		

		.title, .body
			line-height ((list-expanded-item-height - (list-cell-content-padding*2))/2)
			display block

		.body
			font-size 13px
			color #777


	.item-expanded
		height list-expanded-item-height
		line-height list-expanded-item-height

		.pull-left, .pull-right
			width list-expanded-item-height
			height list-expanded-item-height
			line-height list-expanded-item-height	
		
	.divider
		height list-divider-height
		line-height list-divider-height
		font-size 16px
		background-color #f5f5f5
	

	.divider, .padded-list
		padding 0 15px